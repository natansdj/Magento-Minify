<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <dev>
            <groups>
                <js>
                    <fields>
                        <enable_minify_js translate="label">
                            <label>Enable JS Minification</label>
                            <comment>
                                <![CDATA[After enabling/disabling this options, you have to <strong style="color:red;">Flush Javascript/CSS</strong> cache in <strong style="color:red;">System > Cache Management</strong>.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_minify_js>
                        <enable_yuicompressor translate="label">
                            <label>Enable YUICompress</label>
                            <comment>(only if JS Minification is enabled) This allows better minifications results.
                                (requires Java)
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_yuicompressor>
                    </fields>
                </js>
                <css>
                    <fields>
                        <enable_minify_css translate="label">
                            <label>Enable CSS Minification</label>
                            <comment>
                                <![CDATA[After enabling/disabling this options, you have to <strong style="color:red;">Flush Javascript/CSS</strong> cache in <strong style="color:red;">System > Cache Management</strong>.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_minify_css>
                        <lessjs translate="label">
                            <label>Include less.js</label>
                            <comment><![CDATA[When <strong style="color:red;">merging</strong>
                                isn't enabled, .less files wont be compiled to css and less.js is
                                required for proper rendering.<br />
                                When enable merging, please disable this.
                            ]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lessjs>
                        <lessjs_watch translate="label">
                            <label>Enable less.js watch mode</label>
                            <comment><![CDATA[Less.js watches for file changes and updates the browser without refreshing. <strong style="color:red;">Can cause performance issues</strong>
                            ]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lessjs_watch>
                    </fields>
                </css>
            </groups>
        </dev>
    </sections>
</config>
